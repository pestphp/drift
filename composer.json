{
    "name": "pestphp/drift",
    "description": "Drifting you to Pest",
    "type": "library",
    "require": {
        "php": "^7.4",
        "rector/rector": "^0.7.48",
        "pestphp/pest": "^0.2"
    },
    "authors": [
        {
            "name": "Oliver Nybroe",
            "email": "olivernybroe@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pest\\Drift\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pest\\Drift\\Testing\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "symplify/easy-testing": "^8.1.14"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "bin/drift"
    ]
}
